\begin_layout Subsection
Product Function
\end_layout

\begin_layout Subsubsection
Taxi Function
\end_layout

\begin_layout Itemize
Taxi Login: the taxi driver logs into the system; 
\end_layout

\begin_layout Itemize
Taxi Signup: the taxi driver provides his personal information, Username and Password, taxi and driving license to the Operator; 
\end_layout

\begin_layout Itemize
Notification of Availability: with this operation the taxi driver notifies is presence in a specific zone of the town; 
\end_layout

\begin_layout Itemize
Notification of Unavailability: the taxi driver notify the end of his service; 
\end_layout

\begin_layout Itemize
Taking charge: the taxi driver positively reply to a customer request; 
\end_layout

\begin_layout Itemize
Reject request: the taxi driver negatively reply to a customer request; 
\end_layout

\begin_layout Itemize
Report user: the taxi driver report a problem with customer; 
\end_layout

\begin_layout Subsubsection
User Function
\end_layout

\begin_layout Itemize
User Login: the user get logged into the system providing his account information; 
\end_layout

\begin_layout Itemize
User Signup: the user (previously Guest) request a signup to the system providing his personal information; 
\end_layout

\begin_layout Itemize
Request Taxi: the user request a taxi to his location; 
\end_layout

\begin_layout Itemize
Book Taxi: the user reserve a taxi to a specific location at the specific time; 
\end_layout

\begin_layout Itemize
Cancel request: the user cancel the previous request or reservation; 
\end_layout

\begin_layout Itemize
Report taxi: the user report a problem with the taxi driver or the service; 
\end_layout

\begin_layout Itemize
Show Profile: the system provides the user information; 
\end_layout

\begin_layout Itemize
Modify Profile: the user edit his information; 
\end_layout

